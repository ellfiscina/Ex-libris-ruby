<div class="panel-body">
  <% @books.in_groups_of(4, false).each do |group| %>
    <div class="row">
      <% group.each do |book| %>
        <div class="col-lg-3 col-md-4 col-sm-6 home-item">
          <div class="card h-100">
            <% if book.image.attached? %>
              <%= image_tag book.image, class:"card-img-top img-responsive" %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
