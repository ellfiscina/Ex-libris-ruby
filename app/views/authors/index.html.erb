<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= @authors.model_name.human(count: 2) %>
    <%= link_to new_author_path,
    class:"btn btn-success btn-circle pull-right" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= @authors.model.human_attribute_name('firstname') %></th>
              <th><%= @authors.model.human_attribute_name('lastname') %></th>
              <th><%= @authors.model.human_attribute_name('qtt') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
            <tr>
              <td><%= first_name(author.name) %></td>
              <td><%= last_name(author.name) %></td>
              <td style="width: 150px"><%= @books.count_author(author.id) %></td>
              <td style="width: 120px">
                <%= link_to author_path(author), class: "btn btn-info btn-circle" do %>
                <i class="fa fa-list"></i>
                <% end %>
                <%= link_to edit_author_path(author), class: "btn btn-warning btn-circle" do %>
                <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @authors %>
  </div>