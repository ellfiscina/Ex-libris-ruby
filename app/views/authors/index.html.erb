<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    Autor
    <%= link_to new_author_path,
    class:"btn btn-success btn-circle pull-right",
      style:"margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
            <tr>
              <td><%= author.id %></td>
              <td><%= author.name.split(' ')[0] %></td>
              <td><%= author.name.split(' ')[1] %></td>
              <td style="width: 83px">
                <%= link_to edit_author_path(author), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>