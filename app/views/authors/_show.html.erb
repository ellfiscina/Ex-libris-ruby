<div class="panel panel-default">
  <div class="panel-heading">
    <%= @author.name %>
  </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>ISBN</th>
              <th>Título</th>
              <th>Subtítulo</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= book.isbn %></td>
              <td><%= book.title %></td>
              <td><%= book.subtitle %></td>
              <td style="width: 120px">
                <%= link_to book_path(book), class: "btn btn-info btn-circle" do %>
                  <i class="fa fa-book"></i>
                <% end %>
                <%= link_to edit_book_path(book), class: "btn btn-warning btn-circle" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to book_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" do %>
                  <i class="fa fa-trash"> </i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>