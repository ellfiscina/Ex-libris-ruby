<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign Up</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: "form")) do |f| %>
            <%= devise_error_messages! %>
            <fieldset>
              <div class="form-group input-group">
                <span class="input-group-addon"><span class="fa fa-at fa-tw"></span></span>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus" %>
              </div>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br>
              <div class="form-group input-group">
                <span class="input-group-addon"><span class="fa fa-lock fa-tw"></span></span>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Password", type:"password" %>
              </div>
              <div class="form-group input-group">
                <span class="input-group-addon"><span class="fa fa-lock fa-tw"></span></span>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", type:"password" %>
              </div>
              <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
              <br>
              <%= render "admins/shared/links" %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>