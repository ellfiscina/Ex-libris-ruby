    <h3>
      <%= @editors.model_name.human(count: @editors.count) %>
      <small><%= "(#{@editors.count})" %></small>
    </h3>
    <%= link_to new_editor_path,
    class:"btn btn-green pull-right" do %>
      <i class="fa fa-plus fa-2x"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= sortable "name", @editors.model.human_attribute_name('name') %></th>
              <th><%= @editors.model.human_attribute_name('qtt') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @editors.each do |editor| %>
            <tr>
              <td><%= editor.name %></td>
              <td style="width: 150px"><%= @books.count_editor(editor.id) %></td>
              <td style="width: 150px">
                <%= link_to editor_path(editor), class: "btn btn-form btn-blue" do %>
                  <i class="fa fa-list fa-lg"></i>
                <% end %>
                <%= link_to edit_editor_path(editor), class: "btn btn-form btn-yellow" do %>
                <i class="fa fa-edit fa-lg"></i>
                <% end %>
                <%= link_to editor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-form btn-red" do %>
                <i class="fa fa-trash fa-lg"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->

  <div class="row justify-content-center">
    <%= paginate @editors %>
  </div>