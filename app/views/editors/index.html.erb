<br>
<div class="panel panel-default">
  <div class="panel-heading">
    Editoras
    <%= link_to new_editor_path,
    class:"btn btn-success btn-circle pull-right",
      style:"margin-top: -5px; color: white" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Qtd de livros</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @editors.each do |editor| %>
            <tr>
              <td><%= editor.name %></td>
              <td style="width: 150px"><%= editor.books_count %></td>
              <td style="width: 120px">
                <%= link_to editor_path(editor), class: "btn btn-info btn-circle", remote: true do %>
                  <i class="fa fa-list"></i>
                <% end %>
                <%= link_to edit_editor_path(editor), class: "btn btn-warning btn-circle" do %>
                <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to editor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>