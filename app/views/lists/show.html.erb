<div class="panel panel-default">
  <div class="panel-heading">
    <%= @list.year %>
    <small class="pull-right"><%= t('labels.qtt_books', qtt: @list.books.count) %></small>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= @books.model.human_attribute_name('title') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>

  <div class="panel-footer">
    <div class="footer-row">
      <%= form_for @list do |f| %>
        <div class="form-group">
          <%= f.hidden_field :year, class: "form-control", value: @list.year, disable:"disable"%>
        </div>
        <div class="form-group input-group">
          <%= f.collection_select :book_ids, Book.all.order(:title), :id, :title, {include_hidden: false}, { class: "form-control", style:"width: 85%;" }%>
        </div>
        <div id="f_btn" >
          <button type="submit" class="btn btn-primary btn-xs btn-home "><%= t('buttons.ok') %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <%= paginate @books %>
</div>