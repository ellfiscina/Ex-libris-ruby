<div class="panel-footer">
  <div class="footer-row">
    <%= form_for @list do |f| %>
      <% if list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
          <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.hidden_field :year, class: "form-control", value: @year, disable:"disable"%>
      </div>
      <div class="form-group input-group">
        <%= f.collection_select :book_id, Book.all.order(:title), :id, :title, {include_hidden: false}, { class: "form-control" }%>
      </div>
      <div id="f_btn">
        <button type="submit" class="btn btn-primary btn-xs btn-home ">OK</button>
      </div>
    <% end %>
  </div>
</div>