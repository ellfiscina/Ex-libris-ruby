<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= t('app.name') %></title>

  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'home', media: 'all' %>
  <%= csrf_meta_tags %>

</head>

<body>
  <%= render partial: 'shared/layout/navigation' %>

  <header class="masthead" style="background-image: url('/assets/home-bg.jpeg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1><%= t('app.name') %></h1>
            <span class="subheading"><%= t('app.small') %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <%= render partial: 'shared/layout/sidebar' %>

  <div class="wrapper">
    <div id="content-wrapper">
     <div class="container-fluid">
       <div class="row">
         <div class="col-lg-12">
          <%= yield %>
         </div>
       </div>
     </div>
   </div>
  </div>

 <%= javascript_include_tag 'application' %>
 <%= javascript_include_tag 'home' %>
 <%= javascript_include_tag 'statistics' %>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/d3-tip/0.7.1/d3-tip.min.js"></script>
 <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
 <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
 <%= render partial: 'shared/layout/notification' %>
</body>

</html>
