<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= title %>
  </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= @books.model.human_attribute_name('isbn') %></th>
              <th><%= @books.model.human_attribute_name('title') %></th>
              <th><%= @books.model.human_attribute_name('subtitle') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= book.isbn %></td>
              <td><%= book.title %></td>
              <td><%= book.subtitle %></td>
              <td style="width: 150px">
                <%= link_to book_path(book), class: "btn btn-form btn-blue" do %>
                  <i class="fa fa-book fa-lg"></i>
                <% end %>
                <%= link_to edit_book_path(book), class: "btn btn-form btn-yellow" do %>
                  <i class="fa fa-pencil fa-lg"></i>
                <% end %>
                <%= link_to book_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-form btn-red" do %>
                  <i class="fa fa-trash fa-lg"> </i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>