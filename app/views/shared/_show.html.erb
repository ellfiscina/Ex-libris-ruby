<h3><%= title %></h3>
  </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= sortable "isbn", @books.model.human_attribute_name('isbn') %></th>
              <th><%= sortable "title", @books.model.human_attribute_name('title') %></th>
              <th><%= sortable "subtitle", @books.model.human_attribute_name('subtitle') %></th>
              <th><%= sortable "published", @books.model.human_attribute_name('published') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.isbn.nil?
                  book.isbn = '----'
                end %>
                <%= book.isbn %>
                </td>
              <td><%= book.title %></td>
              <td>
                <% if book.subtitle.nil?
                    book.subtitle = '----'
                  end %>
                  <%= book.subtitle %>
              </td>
              <td>
                <% if book.published.nil? %>
                  ----
                <% else %>
                <%= book.published %>
                <% end %>
              </td>
              <td style="width: 150px">
                <%= link_to user_book_path(book), class: "btn btn-form btn-blue" do %>
                  <i class="fa fa-book fa-lg"></i>
                <% end %>
                <%= link_to edit_user_book_path(book), class: "btn btn-form btn-yellow" do %>
                  <i class="fa fa-pencil fa-lg"></i>
                <% end %>
                <%= link_to user_book_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-form btn-red" do %>
                  <i class="fa fa-trash fa-lg"> </i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
  </div>
