<div class="row">
  <h1 class="page-header">Autores</h1>
</div>

<div class="row">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sobrenome</th>
          <th>Qtd de livros</th>
        </tr>
      </thead>
      <tbody>
        <% @authors.each do |author| %>
        <tr>
          <td><%= first_name(author.name) %></td>
          <td><%= last_name(author.name) %></td>
          <td style="width: 150px"><%= author.books_count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>

<!-- Pagination -->
  <div class="row">
    <div class="pull-right">
      <%= paginate @authors %>
    </div>
  </div>
</div>
