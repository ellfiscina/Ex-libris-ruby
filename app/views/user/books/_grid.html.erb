<% @books.in_groups_of(4, false).each do |group| %>
  <div class="row">
    <% group.each do |book| %>
      <div class="col-lg-3 col-md-4 col-sm-6 home-item">
        <div class="card h-100">
          <%= image_tag image_for_book(book), class:"card-img-top img-responsive" %>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to user_book_path(book) do %>
                <%= book.title %>
              <% end %>
            </h4>
          </div>
          <% if book.status == 2 %>
          <div class="card-footer">
            <%= progress_bar book.percentage, alternative: progress_alt(book.percentage), label: true, style: 'min-width: 20px' %>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
