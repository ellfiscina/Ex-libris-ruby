<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th></th>
        <th><%= @books.model.human_attribute_name('title') %></th>
        <th><%= @books.model.human_attribute_name('subtitle') %></th>
        <th><%= @books.model.human_attribute_name('author') %></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag image_for_book(book), class: "img-thumbnail" %>
        </td>
        <td>
          <%= link_to user_book_path(book) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
          <% if book.subtitle? %>
            <%= link_to user_book_path(book) do %>
              <%= book.subtitle %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= Author.find(book.author_id).name %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
