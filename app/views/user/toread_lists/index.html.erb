<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
      Ordem de Leitura
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= form_tag user_sort_path, method: :put do %>
      <table class="table table-striped table-bordered table-hover" id="draggable">
        <thead>
          <tr>
            <th>#</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Páginas</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <%= fields_for "book[]", book do |f| %>
            <tr>
              <%= f.hidden_field :id, value: book.id %>
              <td><%= f.text_field :position, placeholder: book.position, style:"width: 30px; text-align: center;" %></td>
              <td><%= book.title %></td>
              <td><%= book.author.name %></td>
              <td><%= book.pages %></td>
              <td>
                <%= link_to user_book_path(book), class: "btn btn-form btn-show justify-content-center" do %>
                  <i class="fa fa-eye fa-lg"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
      <p><%= submit_tag "OK", class: 'btn btn-primary btn-block' %></p>
      <% end %>
    </div>
  </div>
</div>
