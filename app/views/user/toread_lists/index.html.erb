<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
      Ordem de Leitura
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="draggable">
        <thead>
          <tr>
            <th>#</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Páginas</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% i = 1 %>
          <% @books.each_with_index do |book, index| %>
            <tr id="<%= index + 1 %>">
              <td id="index"><%= i %></td>
              <td><%= book.title %></td>
              <td><%= book.author.name %></td>
              <td><%= book.pages %></td>
              <td>
                <%= link_to user_book_path(book), class: "btn btn-form btn-show justify-content-center" do %>
                  <i class="fa fa-eye fa-lg"></i>
                <% end %>
              </td>
            </tr>
            <% i += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
