<div class="col-lg-3 col-md-6">
  <div class="panel panel-primary" id="blue">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-3">
          <i class="fa fa-angle-down fa-5x"></i>
        </div>
        <div class="col-xs-9 text-right">
          <div class="huge">
            <% if current_user.books.empty? || @max_min[:old].nil? %>
              0
            <% else %>
              <%= @max_min[:old].last %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <a href="#" data-toggle="collapse" data-target="#older">
        <span class="pull-left"><%= t('labels.older') %></span>
        <span class="pull-right" id="iconO">
          <i class="fa fa-arrow-circle-down"></i>
        </span>
        <div class="clearfix"></div>
      </a>
      <div id="older" class="collapse"><small><%= @max_min[:old][0] %></small></div>
    </div>
  </div>
</div>
