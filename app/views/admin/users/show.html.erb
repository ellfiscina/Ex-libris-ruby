<div class="panel-heading">
<h3><%= @user.name %></h3>
  </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= @books.model.human_attribute_name('isbn') %></th>
              <th><%= @books.model.human_attribute_name('title') %></th>
              <th><%= @books.model.human_attribute_name('subtitle') %></th>
              <th><%= @books.model.human_attribute_name('published') %></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.isbn.nil?
                  book.isbn = '----'
                end %>
                <%= book.isbn %>
                </td>
              <td><%= book.title %></td>
              <td>
                <% if book.subtitle.nil?
                    book.subtitle = '----'
                  end %>
                  <%= book.subtitle %>
              </td>
              <td>
                <% if book.published.nil? %>
                  ----
                <% else %>
                <%= book.published %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
